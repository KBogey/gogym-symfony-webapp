{% extends 'public/base.html.twig' %}

{% block title %}
    Go gym | Recherche
{% endblock %}

{% block intro %}

    {{ include('shared/_indexintro.html.twig', { indexTitle : "Votre recherche", indexDescription:  'Précisez votre recherche pour aller plus vite' }) }}

    <div class="container">
        {{ form_start(form) }}
        <div class="form-control my-1 bg-pink-100">
            {{ form_widget(form.q) }}
        </div>
        <div class="form-control my-1 bg-pink-100">
            {{ form_widget(form.categories) }}
        </div>
        <div class="d-flex justify-content-end">
            <button class="btn btn-outline-dark mx-2" type="submit"><i class="bi bi-search"></i></button>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}

{% block body %}
    {% if posts is not empty%}
    <div class="container my-5">
        <div class="row">
            {% for post in posts %}
                {{ include('shared/_postcard.html.twig', { post: post }) }}
            {% endfor %}
        </div>
        <div class="navigation d-flex justify-content-center small mb-5">
            {{ knp_pagination_render(posts, 'shared/bootstrap_v5_pagination.html.twig') }}
        </div>
    </div>
    {% else %}
        <div class="container my-5">
            <div class="row">
                <p>Votre recherche n'a donné aucun résultat.</p>
            </div>
        </div>
    {% endif %}
{% endblock %}